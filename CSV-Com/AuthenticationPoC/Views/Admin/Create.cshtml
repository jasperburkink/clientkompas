@using AuthenticationPoC.ViewModels;
@model GebruikerViewModel
@{
    ViewData["Title"] = "Maak gebruiker aan";
}

<h1 class="bg-info text-white">Create User</h1>
<a asp-action="Index" class="btn btn-secondary">Back</a>
<div asp-validation-summary="All" class="text-danger"></div>

<form method="post">
    <div class="form-group">
        <label asp-for="Gebruikersnaam"></label>
        <input asp-for="Gebruikersnaam" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Voornaam"></label>
        <input asp-for="Voornaam" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Achternaam"></label>
        <input asp-for="Achternaam" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Wachtwoord"></label>
        <input asp-for="Wachtwoord" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>